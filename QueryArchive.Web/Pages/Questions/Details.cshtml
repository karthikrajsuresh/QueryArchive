@page
@model QueryArchive.Web.Pages.Questions.DetailsModel

<h1>Question Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Question.QuestionID
        </dd>
        <dt class="col-sm-2">
            Topic ID
        </dt>
        <dd class="col-sm-10">
            @Model.Question.TopicID
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Question.Title
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Question.Content
        </dd>
        <dt class="col-sm-2">
            Answers Count
        </dt>
        <dd class="col-sm-10">
            @Model.Question.AnswersCount
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.Question.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            Updated Date
        </dt>
        <dd class="col-sm-10">
            @Model.Question.UpdatedDate.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
