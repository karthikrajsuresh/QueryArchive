@page
@model QueryArchive.Web.Pages.Answers.DetailsModel

<h1>Answer Details</h1>

<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Answer.AnswerID
        </dd>
        <dt class="col-sm-2">
            Question ID
        </dt>
        <dd class="col-sm-10">
            @Model.Answer.QuestionID
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Answer.Content
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.Answer.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            Updated Date
        </dt>
        <dd class="col-sm-10">
            @Model.Answer.UpdatedDate.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
